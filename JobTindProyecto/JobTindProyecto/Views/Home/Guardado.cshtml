@model JobTindProyecto.Dominio.Usuario;
@{
    ViewData["Title"] = "Guardado";
}

<link rel="stylesheet"
      href="https://kit.fontawesome.com/ffd11ebe0f.js" crossorigin="anonymous" />

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js>" />

<script src="https://kit.fontawesome.com/ffd11ebe0f.js" crossorigin="anonymous"></script>

@using (Html.BeginForm("Guardar", "Home", FormMethod.Post))
{
    <link rel="stylesheet" href="~/css/Estilo.css" />
    <body>

        <section class="banner contenedor">

            <div class="banner_img">
                <img src="~/css/registro.gif" alt="" class="animate__animated animate__backInDown">
            </div>
        </section>

        <h2 style="color: royalblue" class=" animate__animated animate__bounce">Bienvenido, Ingrese sus datos para Registrarse</h2>
        <br>
        <i class="fas fa-user-circle"></i>
        <label class=" animate__animated animate__bounce">Nombres de Usuario</label>
        <br />
        @Html.TextBoxFor(m => m.Nombres)
        @Html.ValidationMessageFor(m => m.Nombres)
        <br />
        <br />
        <i class="far fa-user-circle"></i>
        <label class=" animate__animated animate__bounce">Apellido</label>
        <br />
        @Html.TextBoxFor(m => m.Apellidos)
        @Html.ValidationMessageFor(m => m.Apellidos)
        <br />
        <br />
        <i class="far fa-calendar-alt"></i>
        <label class=" animate__animated animate__bounce">Edad</label>
        <br />
        @Html.TextBoxFor(m => m.Edad)
        @Html.ValidationMessageFor(m => m.Edad)
        <br />
        <br />

        <i class="far fa-id-card"></i>
        <label class=" animate__animated animate__bounce">DUI</label>
        <br />
        @Html.TextBoxFor(m => m.DUI)
        @Html.ValidationMessageFor(m => m.DUI)
        <br />
        <br />

        <i class="fas fa-phone-square-alt"></i>
        <label class=" animate__animated animate__bounce">Telefono</label>
        <br />
        @Html.TextBoxFor(m => m.Telefono)
        @Html.ValidationMessageFor(m => m.Telefono)
        <br />
        <br />

        <i class="fas fa-at"></i>
        <label class=" animate__animated animate__bounce">E-mail</label>
        <br />
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
        <br />
        <br />
        <i class="fas fa-lock"></i>
        <label class=" animate__animated animate__bounce">Contraseña</label>
        <br />
        @Html.TextBoxFor(m => m.Contraseña)
        @Html.ValidationMessageFor(m => m.Contraseña)
        <br />
        <br />
        <br />
        <input type="submit" class="btn btn-outline-danger animate__animated animate__jello ">
        <br>

    </body>
}
<h2 class="wow animate__animated animate__pulse" data-wow-duration="2s" data-wow-delay="2s">Guardar</h2>
<script src="https://cdn.boomcdn.com/libs/wow-js/1.3.0/wow.js"></script>
<script type="text/javascript">
    new WOW().init();
</script>
